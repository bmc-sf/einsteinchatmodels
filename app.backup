app.get('/weather', (req, res) => {
    //res.sendFile(__dirname + '/public/weather.html'); // Serve the HTML file
    https.get(url, (response) => {
        let data = '';
      
        // Collect chunks of data
        response.on('data', (chunk) => {
          data += chunk;
        });
      
        // Parse and display the data when it's fully received
        response.on('end', () => {
          try {
            const weatherData = JSON.parse(data);
            console.log(weatherData);
            res.send(weatherData);
          } catch (error) {
            console.error('Error parsing JSON data:', error);
          }
        });
      
      }).on('error', (err) => {
        console.error('Error making the request:', err.message);
      });
});

app.get('/request-token', async (req, res) => {    
  //const { my_domain, consumer_key, consumer_secret } = req.body;    
